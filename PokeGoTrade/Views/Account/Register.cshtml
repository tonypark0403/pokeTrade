@model PokeGoTrade.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<link rel="stylesheet" href="~/Content/login.css">

<div class="login">
    <p>PokkeGo<span>Trade v.1</span></p>
    <div id="message"></div>
    <div class="login-screen">
        <div class="app-title">
            <h1>Register</h1>
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="login-form">                 
                <div class="control-group">
                    @Html.TextBoxFor(m => m.Username, new { @class = "login-field", placeholder = "Username" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>  
                @*<div class="control-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "login-field", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>*@             
                <div class="control-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "login-field", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="control-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login-field", placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
                <div class="control-group">
                    <div class="g-recaptcha" data-sitekey="6LeYQQoUAAAAAGwiXF3SBNFLLrf1brlWfx6ZF_hs"></div>
                </div>                    
                <input type="submit" class="btn btn-primary btn-large btn-block" id ="submit" value="Register" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
}
